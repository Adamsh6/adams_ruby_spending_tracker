<h3>Create a new transaction here:</h3>

<form class="transactions--new transactions--form" action="/transactions" method="post">
<label for="amount">Amount:</label>
<p class="amount">Â£<input id="amount" type="number" step="0.01" min="0.01" name="amount" required></p>
<label for="merchants">Merchant: </label>
<select name="merchant_id" id="merchants">
  <% for merchant in @merchants %>
  <option value="<%= merchant.id %>"><%= merchant.name %></option>
  <% end %>
</select>
<label for="tags">Tag:</label>
<select name="tag_id" id="tags">
  <% for tag in @tags %>
  <option value="<%= tag.id %>"><%= tag.name %></option>
  <% end %>
</select>
<label for="date">Transaction Date:</label>

<input type="date" id="start" name="time_stamp" min="<%= @date_6_months_ago %>" max="<%= @date_today %>" value="<%= @date_today %>">
<input class="btn" type="submit" value="Add transaction">
</form>
